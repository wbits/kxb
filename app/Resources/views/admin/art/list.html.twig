{# app/Resources/views/admin/art/list.html.twig #}
{% extends 'admin/base.html.twig' %}

{% block title %}Art{% endblock %}

{% block body %}
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <a href="/admin/art/create">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </a>
            <h3>Art list</h3>
        </div>

        <!-- Table -->
        <table class="table">
            <tr>
                <th>Title</th>
                <th>Material</th>
                <th>Size</th>
                <th>Year</th>
                <th>Availability</th>
                <th>Price</th>
            </tr>
            {% for art in list %}
                <tr id="{{ art.id }}">
                    <td class="title"><a href="/admin/art/{{ art.id }}">{{ art.title|e }}</a></td>
                    <td class="material">{{ art.material }}</td>
                    <td class="size">{{ art.size }}</td>
                    <td class="year">{{ art.year }}</td>
                    <td class="availability">{{ art.availability }} pieces</td>
                    <td class="price">{{ art.price }}</td>
                    <td>
                        <a href="/admin/art/delete/{{ art.id }}">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
